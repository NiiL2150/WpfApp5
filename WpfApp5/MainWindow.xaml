<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <StackPanel Margin="5">
                <ListBox Height="300" ItemsSource="{Binding NotifiableColl}"/>
                <Button Margin="0,5,0,0" Content="Add value with notification" Click="ButtonNotify_Click"/>
            </StackPanel>
            <StackPanel Margin="5">
                <ListBox Height="300" ItemsSource="{Binding NonNotifiableColl}"/>
                <Button Margin="0,5,0,0" Content="Add value without notification" Click="ButtonNonNotify_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
